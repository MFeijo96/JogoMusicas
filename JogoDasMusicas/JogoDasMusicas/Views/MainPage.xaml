<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JogoDasMusicas.Views.MainPage"
             BackgroundImage="background_menu">
	<ContentPage.Content>
        <Frame HorizontalOptions="Center" VerticalOptions="Start" BackgroundColor="Transparent" Margin="100">
            <StackLayout Spacing="50">
            <Label Text="Jogo das Músicas"
				Font="Large"
                FontSize="40"
                VerticalOptions="Start" 
                TextColor="White"
                HorizontalOptions="CenterAndExpand" />
           
            <Button Text="Iniciar"
                VerticalOptions="End" 
                BackgroundColor="Transparent"
                TextColor="White"
                HorizontalOptions="CenterAndExpand"
			    Clicked="StartGame"	/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>